<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="app">
	<insert id="addAppline" parameterType="AppLine">
		<selectKey keyProperty="num" resultType="int" order="BEFORE">
		SELECT SEQ_APPROVALLINE_NO.nextval FROM dual
		</selectKey>
	INSERT INTO approvalline (num)
	VALUES (#{num})
	</insert>
	
	<insert id="addApplist" parameterType="AppLine">
	INSERT ALL
		<foreach item="app" index="index" collection="list">
		INTO approval (num,seq,empno)
		VALUES (#{num},#{index},#{app.empno})
		</foreach>
	SELECT * FROM DUAL
	</insert>
	
	<insert id="addAppcon" parameterType="RawApproval">
	INSERT INTO appcontent (num,title,content,appline,coopline,empno,ollno,state)
	VALUES (SEQ_APPCONTENT_NO.nextval,#{title},#{content},#{appline},#{coopline},#{empno},-1,#{state})
	</insert>
	
	<select id="getAppcon" parameterType="int" resultType="RawApproval">
	SELECT num,title,content,appline,coopline,empno,ollno,state
	FROM appcontent
	WHERE num = #{num}
	</select>
	
	<select id="getApplist" parameterType="int">
	SELECT num,seq,empno
	FROM approval
	WHERE num = #{num}
	</select>
</mapper>